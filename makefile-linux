bwipe : main.o HDD.o
	g++ -o bwipe.out --std=c++0x -Wall -pthread main.o HDD.o
HDD.o : HDD.cpp
	g++ --std=c++0x -pthread -Wall -c HDD.cpp
main.o : main.cpp
	g++ --std=c++0x -pthread -Wall -c main.cpp
run : bwipe
	./bwipe.out
edit:
	gedit ./*.cpp
	gedit ./*.h
all: edit
	gedit makefile-linux
clean:
	rm HDD.o
	rm main.o
#load : bwipe
#	sudo ~/homeupdate.zsh
